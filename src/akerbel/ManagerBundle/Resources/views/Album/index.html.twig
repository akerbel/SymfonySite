{% extends '::base.html.twig' %}

{% block title %}{{ parent() }} Album Manager{% endblock %}

{% block sidebar %}
    {{ include('@manager/sidebar.html.twig') }}
{% endblock %}

{% block body -%}
    
    <ul>
        {% for album in albums %}
            <li>
                {{ album.id }}. {{ album.title }} - 
                <a href="{{ path('album_show', {'id': album.id}) }}">View Album</a>
            </li>
        {% endfor %}
    </ul>
    
    <p>
        <a href="{{ path('album_new') }}">Create New Album</a>
    </p>
{% endblock %}
